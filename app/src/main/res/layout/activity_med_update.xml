<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    android:columnCount="3"
    android:maxWidth="380dp"
    android:rowCount="10"
    tools:context="com.example.joanna.housepharmacy.Activities.MedUpdateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginEnd="10dp"
        android:layout_row="1"
        android:text="@string/med_name_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/dose_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/form_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:gravity="center"
        android:text="@string/amount_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:gravity="center"
        android:text="@string/purpose_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:text="@string/place_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_row="0"
        android:text="Obecnie"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />

    <TextView

        android:id="@+id/tvNameUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginEnd="10dp"
        android:layout_row="1"
        android:maxWidth="150dp"
        android:text="@string/med_name_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDoseUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="@string/dose_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFormUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:text="@string/form_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAmountUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:text="@string/amount_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPurposeUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginEnd="10dp"
        android:layout_row="5"
        android:maxWidth="150dp"
        android:text="@string/purpose_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPlaceUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="6"
        android:text="@string/place_string"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="0"
        android:text="ZmieÅ„"
        android:textColor="@color/text"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNameUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_row="1"
        android:gravity="center"
        android:hint="@string/name_string"
        android:maxWidth="180dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDoseUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_row="2"
        android:gravity="center"
        android:hint="@string/dose_string"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spFormUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_row="3"
        android:gravity="center" />

    <EditText
        android:id="@+id/etAmountUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_row="4"
        android:gravity="center"
        android:hint="@string/amount_string"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPurposeUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_row="5"
        android:gravity="center"
        android:hint="@string/purpose_string"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/tvUpdate"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spPlaceUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_row="6"
        android:gravity="center" />


    <Button
        android:id="@+id/bUpdateMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginTop="40sp"
        android:layout_row="7"
        android:background="@drawable/rounded_button"
        android:text="@string/update_string"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/bDeleteMedUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_row="8"
        android:background="@drawable/rounded_button"
        android:text="@string/delete_string"
        android:textColor="@android:color/white" />


</GridLayout>
